        <div class="control-group">
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Edit</button>
                {% set hide_edit, hide_delete = true, true %}
                {% include 'crud/views/others/record_actions.html.twig.twig' %}
            </div>
        </div>
    </form>

{{ "{% endblock %}" }}
{% endblock body %}
