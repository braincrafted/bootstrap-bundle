{% block repeated_row %}
{% spaceless %}
    {#
    No need to render the errors here, as all errors are mapped
    to the first child (see RepeatedTypeValidatorExtension).
    #}
    {{ block('form_rows') }}
{% endspaceless %}
{% endblock repeated_row %}

{% block form_row %}
{% spaceless %}
    {% if style is not defined %}
        {% set style = bootstrap_get_style() %}
    {% endif %}
    {% if label_col is not defined %}
        {% set label_col = 2 %}
    {% endif %}
    {% if widget_col is not defined %}
        {% set widget_col = 10 %}
    {% endif %}
    {% if style == 'horizontal' %}
        <div class="form-group row{% if not form.vars.valid %} has-error{% endif %}">
            {{ form_label(form) }}
            <div class="col-lg-{{ widget_col }}">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>

    {% else %}
        <div>
            {{ form_label(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    {% endif %}
{% endspaceless %}
{% endblock form_row %}

